<!-- source/flats/show.html.erb -->

<!-- Access data.flats with owner's name as key -->
<% flat = data.flats[owner] %>

<!-- Inject flat data in template -->
<div class="profile">
  <div class="banner-sm" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://kitt.lewagon.com/placeholder/cities/amsterdam');">
  </div>
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-4">
        <div class="profile-details">
          <div class="text-center">
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{owner}", class: "img-circle avatar" %>
            <p><%= flat.name %></p>
          </div>
          <div class="profile-body">
            <h3><%= flat.description %></h3>
            <p><%= flat.city_name %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
